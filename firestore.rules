rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Webinars - Anyone can read (for viewing), only owner can write
    match /webinars/{webinarId} {
      allow read: if true;
      allow create: if request.auth != null
                    && request.resource.data.tenantId == request.auth.uid;
      allow update, delete: if request.auth != null
                            && resource.data.tenantId == request.auth.uid;
    }

    // Tenants - Only the tenant themselves or admins can read/write
    match /tenants/{tenantId} {
      allow read: if request.auth != null
                  && (request.auth.uid == tenantId
                      || get(/databases/$(database)/documents/tenants/$(request.auth.uid)).data.isAdmin == true);
      allow write: if request.auth != null
                   && get(/databases/$(database)/documents/tenants/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
